{
	"extends": "astro/tsconfigs/strict",
	"include": [
		".astro/types.d.ts",
		"**/*"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"module": "esnext",
		"paths": {
			"@assets/*": [
				"./src/assets/*"
			],
			"@attachments/*": [
				"./src/attachments/*"
			],
			"@classes/*": [
				"./src/classes/*"
			],
			"@components/*": [
				"./src/components/*"
			],
			"@constants/*": [
				"./src/constants/*"
			],
			"@contexts/*": [
				"./src/contexts/*"
			],
			"@functions/*": [
				"./src/functions/*"
			],
			"@types": [
				"./src/types"
			]
		}
	},
	"exclude": [
		"dist"
	]
}
